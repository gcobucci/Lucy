@model IEnumerable<ModelCL.Tema>

@{
    ViewBag.Title = "Temas";
}


<p>
    @Html.ActionLink("Crear", "Create")
</p>
<div class="row">
    <div class="col-md-12">
        <div class="x_panel">

            <table class="table">
                <tr>
                    <th>
                        Nombre del Tema
                    </th>
                    <th>
                        Descripcion del Tema
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TemaNombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TemaDescripcion)
                        </td>
                        <td>
                            @Html.ActionLink("Ver", "Details", new { id = item.TemaId }) |
                            @Html.ActionLink("Editar", "Edit", new { id = item.TemaId }) |                            
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.TemaId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
