@model IEnumerable<ModelCL.Sexo>

@{
    ViewBag.Title = "Sexos";
}


<p>
    @Html.ActionLink("Crear", "Create")
</p>
<div class="row">
    <div class="col-md-12">
        <div class="x_panel">

            <table class="table">
                <tr>
                    <th>
                        Nombre del Sexo
                    </th>
                    <th>
                        Descripción del Sexo
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SexoNombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SexoDesc)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.SexoId }) |                            
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.SexoId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
