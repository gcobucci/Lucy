            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ValorMsgBajo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ValorMsgBajo, new { htmlAttributes = new { @class = "form-control" } })
