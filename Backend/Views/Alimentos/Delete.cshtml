@model ModelCL.Alimento

@{
    ViewBag.Title = "Eliminar Alimento";
}


<h3>¿Está seguro de que desea eliminar este alimento?</h3>
<div>
    <h4>Alimento</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Alimento")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlimentoNombre)
        </dd>

        <dt>
            @Html.Label("Imagen")
        </dt>

        <dd>
            <img src="http://www.yotecuido.mate/@Html.DisplayFor(model => model.AlimentoImagen)" height="70" width="70" alt="Imagen no encontrada" />
        </dd>

        <dt>
            @Html.Label("Porción")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlimentoPorcion)
        </dd>

        <dt>
            @Html.Label("Carbohidratos")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlimentoCarbohidratos)
        </dd>

        <dt>
            @Html.Label("Calorías")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlimentoCalorias)
        </dd>

        <dt>
            @Html.Label("Azucar")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlimentoAzucar)
        </dd>

        <dt>
           @Html.Label("Grasas totales")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlimentoGrasa)
        </dd>

        <dt>
            @Html.Label("Sodio")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlimentoSodio)
        </dd>

        <dt>
            @Html.Label("Gluten")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlimentoGluten)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Volver al listado", "Index")
        </div>
    }
</div>
