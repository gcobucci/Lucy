@model IEnumerable<ModelCL.Alimento>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Alimento
        </th>
        <th></th>
        <th>
            Porcion
        </th>
        <th>
            Carbohidratos
        </th>
        <th>
            Calorias
        </th>
        <th>
            Azucar
        </th>
        <th>
            Grasa
        </th>
        <th>
            Sodio
        </th>
        <th>
            Gluten
        </th>
        <th>
            Usuario
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AlimentoNombre)
        </td>
        <td>
            <img src="http://localhost:4181/@Html.DisplayFor(modelItem => item.AlimentoImagen)" height="70" width="70" alt="Imágen no encontrada" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlimentoPorcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlimentoCarbohidratos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlimentoCalorias)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlimentoAzucar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlimentoGrasa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlimentoSodio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlimentoGluten)
        </td>
        <td>
            @if (item.Usuario != null)
            {
                @Html.DisplayFor(modelItem => item.Usuario.UsuarioNombre)
            }
            else
            {
                <text> Alimento Oficial</text>
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AlimentoId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AlimentoId })
        </td>
    </tr>
}

</table>
