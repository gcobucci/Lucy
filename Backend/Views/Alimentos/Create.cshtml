                @Html.EditorFor(model => model.AlimentoSodio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AlimentoSodio, "", new { @class = "text-danger" })
            </div>
        </div>

