@model IEnumerable<ModelCL.Enfermedad>

@{
    ViewBag.Title = "Enfermedades";
}

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<div class="row">
    <div class="col-md-12">
        <div class="x_panel">

            <table class="table">
                <tr>
                    <th>
                        Nombre de Enfermedad
                    </th>
                    <th>
                        Descripción de Enfermedad
                    </th>
                    <th>
                        Cantidad de valores asociados
                    </th>
                    <th>
                        Cantidad de medicinas asociadas
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnfermedadNombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnfermedadDesc)
                        </td>
                        <td>
                            @item.Valor.Count().ToString()
                        </td>
                        <td>
                            @item.Medicina.Count().ToString()
                        </td>
                        <td>
                            @Html.ActionLink("Ver", "Details", new { id = item.EnfermedadId }) |
                            @Html.ActionLink("Editar", "Edit", new { id = item.EnfermedadId }) |                            
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.EnfermedadId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
