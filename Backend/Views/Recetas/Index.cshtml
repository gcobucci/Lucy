@model IEnumerable<ModelCL.Contenido>

@{
    ViewBag.Title = "Recetas";
}


<p>
    @Html.ActionLink("Crear", "Create")
</p>
<div class="row">
    <div class="col-md-12">
        <div class="x_panel">

            <table class="table">
                <tr>
                    <th>
                        Contenido del Título
                    </th>
                    <th>
                        Contenido de Descripción
                    </th>
                    <th>
                        Calorías por Receta
                    </th>
                    <th>
                        Hidratos por Receta
                    </th>
                    <th>
                        Sodio por Receta
                    </th>
                    <th>
                        Gluten por Receta
                    </th>
                    <th>
                        Imagen
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContenidoTitulo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContenidoDescripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Receta.RecetaCalorias)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Receta.RecetaHidratos)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Receta.RecetaSodio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Receta.RecetaGluten)
                        </td>
                        <td>
                            <img src="http://localhost:4181/@Html.DisplayFor(modelItem => item.Multimedia.Where(m => m.MultimediaOrden == 1).FirstOrDefault().MultimediaUrl)" height="70" width="70" alt="Imagen no encontrada" />                           
                        </td>
                        <td>
                            @Html.ActionLink("Ver", "Details", new { id = item.ContenidoId }) |
                            @Html.ActionLink("Editar", "Edit", new { id = item.ContenidoId }) |                            
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.ContenidoId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
