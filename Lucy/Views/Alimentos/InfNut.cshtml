@model IEnumerable<ModelCL.Alimento>

@{
    ViewBag.Title = "Información Nutricional";
}

<h2>Información Nutricional</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="container">
    <div class="row">
        <div class="box clearfix">
            <table class="table table-hover table-striped" id="bootstrap-table">
                <thead>
                    <tr>
                        <th>
                            Imagen
                        </th>
                        <th>
                            Alimento
                        </th>
                        <th>
                            Porcion
                        </th>
                        <th>
                            Carbohidratos (g)
                        </th>
                        <th>
                            Caloria
                        </th>
                        <th>
                            Azúcares (g)
                        </th>
                        <th>
                            Grasas (g)
                        </th>
                        <th>
                            Sodio (mg)
                        </th>
                        <th>
                            Gluten
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.AlimentoImagen.ToString()" height="70" width="70" alt="@item.AlimentoNombre.ToString()" title="@item.AlimentoNombre.ToString()" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AlimentoNombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AlimentoPorcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AlimentoCarbohidratos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AlimentoCalorias)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AlimentoAzucar)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AlimentoGrasa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AlimentoSodio)
                            </td>
                            <td>
                                @if (item.AlimentoGluten == true)
                                {
                                    <font>Si</font>
                                }
                                else if (item.AlimentoGluten == false)
                                {
                                    <font>No</font>
                                }
                                else
                                {
                                    <font>Sin determinar</font>
                                }
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{

    <script src="../../Scripts/jquery.sortelements.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.bdt.min.js" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $('#bootstrap-table').bdt({
                showSearchForm: 1,
                showEntriesPerPageField: 1
            });
        });
    </script>

}
