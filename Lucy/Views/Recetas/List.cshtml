@model IEnumerable<ModelCL.Receta>

@{
    ViewBag.Title = "Recetas";
}

<h2>Recetas</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="container">
    <div class="row">
        <div class="box clearfix">
            <table class="table table-hover table-striped" id="bootstrap-table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.RecetaDescripcion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RecetaCalorias)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RecetaHidratos)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RecetaSodio)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RecetaGluten)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Contenido.ContenidoTitulo)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RecetaDescripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RecetaCalorias)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RecetaHidratos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RecetaSodio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RecetaGluten)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Contenido.ContenidoTitulo)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.RecetaId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.RecetaId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.RecetaId })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{

    @Scripts.Render("~/bundles/Tablas")

    <script>
        $(document).ready(function () {
            $('#bootstrap-table').bdt({
                showSearchForm: 1,
                showEntriesPerPageField: 1
            });
        });
    </script>

}