@model Lucy.Models.ConfiguracionNotificacionesViewModel

<h3>Notificaciones</h3>

<br />

<div id="form_notificaciones">
    @using (Html.BeginForm("_notificaciones", "Configuracion", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.UsuarioRecibirEmails, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.UsuarioRecibirEmails, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UsuarioRecibirEmails, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    }
</div>