<div class="row">
    <div class="col-sm-12">
        @if (ViewBag.esPremium == false)
        {
            <h4>Suscripción actual: <span class="">Gratis</span></h4>
        }
        else
        {
            <h4>Suscripción actual: <span class="cornflowerblue">Premium</span></h4>
        }
    </div>
</div>

<hr />

<section class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="section-title">
                    <h2>Prueba <span>Premium</span></h2>
                    <p>Con tu cuenta Premium podrás acceder a más contenido y más herramientas para cuidar tu salud, y  la de los que más te importan.</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-offset-3 col-md-3">
                <div class="single-pricing-box">
                    <h3>Estándar</h3>
                    <div class="pricing-icon">
                        <i class="glyphicon glyphicon-heart-empty"></i>
                    </div>
                    <div class="pricing-list">
                        <ul>
                            <li>2 Personas a cargo</li>
                            <li>Registros y Controles</li>
                            <li>Artículos y Noticias</li>
                            <li class="off">Dietas personalizadas</li>
                            <li class="off">Recetas</li>
                            <li class="off">Ejercicios</li>
                        </ul>
                    </div>
                    <h3 class="pricing-count">Gratis</h3>
                    @if (ViewBag.esPremium == false)
                    {
                        using (Html.BeginForm("_premium", "Configuracion", new { accion = false }, FormMethod.Post))
                        {

                            <input type="submit" value="Activar" class="bordered-btn" style="opacity:0.4" disabled />

                        }
                    }
                    else
                    {
                        using (Html.BeginForm("_premium", "Configuracion", new { accion = false }, FormMethod.Post))
                        {

                            <input type="submit" value="Activar" class="bordered-btn" />

                        }
                    }
                </div>
            </div>
            <div class="col-md-3">
                <div class="single-pricing-box">
                    <h3>Premium</h3>
                    <div class="pricing-icon">
                        <i class="glyphicon glyphicon-heart"></i>
                    </div>
                    <div class="pricing-list">
                        <ul>
                            <li>5 Personas a cargo</li>
                            <li>Registros y Controles</li>
                            <li>Artículos y Noticias</li>
                            <li>Dietas personalizadas</li>
                            <li>Recetas</li>
                            <li>Ejercicios</li>
                        </ul>
                    </div>
                    <h3 class="pricing-count"><sup>U$S </sup>1,99</h3>
                    @if (ViewBag.esPremium == true)
                    {
                        using (Html.BeginForm("_premium", "Configuracion", new { accion = true }, FormMethod.Post))
                        {

                        <input type="submit" value="Activar" class="bordered-btn" style="opacity:0.4" disabled />

                        }
                    }
                    else
                    {
                        using (Html.BeginForm("_premium", "Configuracion", new { accion = true }, FormMethod.Post))
                        {

                            <input type="submit" value="Activar" class="bordered-btn" />

                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<hr />