@model IEnumerable<ModelCL.Notificacion>
@{ var i = 0; }

@if (Model.Count() > 0)
{
    <div class="panel-group" id="accordion">
        @foreach (var item in Model)
        {
            { i += 1; }
            <div id="panel-@item.NotificacionId" class="panel panel-default">
                <div class="panel-heading">
                    <a href="#" onclick="eliminarNot('panel-@item.NotificacionId', @item.NotificacionId)" class="close-custom red" title="Eliminar">&times;</a>
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapse-@i" style="text-decoration:none !important">
                        <img src="http://localhost:4181/@Html.DisplayFor(modelItem => item.TemaNot.TemaNotImagen)" height="70" width="70" alt="Imagen no encontrada" style="margin: 5px 15px 5px 0;" />
                        <div class="boxNot">
                            <small>@Html.DisplayFor(modelItem => item.TemaNot.TemaNotDescripcion) (@item.NotificacionFchHora.ToString("dd MMM yyyy - HH:mm"))</small>
                            <br /><h4 class="panel-title"><strong>@Html.DisplayFor(modelItem => item.NotificacionTitulo)</strong></h4>
                        </div>
                    </a>
                </div>
                <div id="collapse-@i" class="panel-collapse collapse">
                    <div class="panel-body">
                        @Html.Raw(item.NotificacionDescripcion.Replace(Environment.NewLine, "<br/>"))
                    </div>
                </div>
            </div>

            @*<div class="row boxNot">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-xs-4 col-sm-2"><img src="http://localhost:4181/@Html.DisplayFor(modelItem => item.TemaNot.TemaNotImagen)" height="70" width="70" alt="Imagen no encontrada" /></div>

                            <div class="col-xs-8 col-sm-10">
                                <a href="/notificaciones/eliminar?id=@item.NotificacionId" class="close-custom red" title="Eliminar">&times;</a>
                                <strong>@Html.DisplayFor(modelItem => item.NotificacionTitulo)</strong>
                                <small> - @Html.DisplayFor(modelItem => item.TemaNot.TemaNotDescripcion) (@item.NotificacionFchHora.ToString("dd MMM yyyy - HH:mm"))</small>
                                <p>@Html.Raw(item.NotificacionDescripcion.Replace(Environment.NewLine, "<br/>"))</p>
                            </div>

                        </div>

                    </div>
                </div>*@
        }
    </div>
}
else
{
    <h3 style="text-align: center;margin-bottom: 20px;"><small>No tienes notificaciones</small></h3>
}
