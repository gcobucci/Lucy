@model Lucy.Models.RegMedicacionViewModel

@{
    ViewBag.Title = "Medicina | Editar";
}

<h2>Editar registro</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Medicina</h4>
        <div>
            @Html.ActionLink("Volver al listado", "Index")
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>¡Error!</strong> @ViewBag.ErrorMessage
            </div>
        }

        @Html.HiddenFor(model => model.RegistroId)
        @*@Html.HiddenFor(model => model.PersonaId)
        @Html.HiddenFor(model => model.EnfermedadId)
        @Html.HiddenFor(model => model.MedicinaId)*@

        <div class="form-group">
            @Html.Label("Enfermedad", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span class="display-for">@Html.DisplayFor(model => model.EnfermedadNombre)</span>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Medicina", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span class="display-for">@Html.DisplayFor(model => model.MedicinaNombre)</span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RegistroFchHora, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="input-group date datetimepicker" style="max-width: 280px">
                    @Html.EditorFor(model => model.RegistroFchHora, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.RegistroFchHora, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PresentacionId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PresentacionId, ViewBag.lPresentacionesMed as SelectList, "Seleccionar", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PresentacionId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MedicacionCantidad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MedicacionCantidad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MedicacionCantidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section style {
    @Styles.Render("~/Content/bootstrap-datetimepicker")
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap-datetimepicker")

    <script type="text/javascript">
        //window.onload = function cargar() {
        //    $('form').attr('novalidate');
        //}

        //$("#MedicacionCantidad").removeAttr("data-val");


        $(function () {
            var ln = x = window.navigator.language || navigator.browserLanguage;
            $('.datetimepicker').datetimepicker({
                locale: 'es',
                viewMode: 'days',
                locale: ln,
                maxDate: 'now',
                //format: 'L'
            });
        });        
    </script>
}
