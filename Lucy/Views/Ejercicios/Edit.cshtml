                </div>
            </div>
        </div>

        @if (Model.EjercicioImagen3Id != null)
        {
            <div class="form-group">
                <input type="checkbox" name="checkBorrar" value="@Model.EjercicioImagen3Id" />
                @Html.Label("Eliminar archivo multimedia", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
        }

        <div class="form-group">
            @Html.Label("Agregar/Cambiar archivo multimedia", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="editor-field">
                    <input type="file" name="files" value="" />
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Multimedia 4", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="editor-field">
                    <img src="http://www.yotecuido.mate/@Html.DisplayFor(model => model.EjercicioImagen4Url)" height="70" width="70" alt="No se ha registrado una imagen" />
                </div>
            </div>
        </div>

        @if (Model.EjercicioImagen4Id != null)
        {
            <div class="form-group">
                <input type="checkbox" name="checkBorrar" value="@Model.EjercicioImagen4Id" />
                @Html.Label("Eliminar archivo multimedia", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
        }

        <div class="form-group">
            @Html.Label("Agregar/Cambiar archivo multimedia", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="editor-field">
                    <input type="file" name="files" value="" />
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Multimedia 5", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="editor-field">
                    <img src="http://www.yotecuido.mate/@Html.DisplayFor(model => model.EjercicioImagen5Url)" height="70" width="70" alt="No se ha registrado una imagen" />
                </div>
            </div>
        </div>

        @if (Model.EjercicioImagen5Id != null)
        {
            <div class="form-group">
                <input type="checkbox" name="checkBorrar" value="@Model.EjercicioImagen5Id" />
                @Html.Label("Eliminar archivo multimedia", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
        }

        <div class="form-group">
            @Html.Label("Agregar/Cambiar archivo multimedia", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="editor-field">
                    <input type="file" name="files" value="" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver al listado", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
