@model IEnumerable<ModelCL.Contenido>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Nombre")
        </th>
        <th>
            @Html.Label("Tipo")
        </th>
        <th>
            @Html.Label("Categoría")
        </th>
        <th>
            @Html.Label("Descripción")
        </th>
        <th>
            @Html.Label("Imágen")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ContenidoTitulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ejercicio.EjercicioTipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ejercicio.EjercicioCategoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContenidoDescripcion)
        </td>
        <td>
            <img src="http://localhost:4181/@Html.DisplayFor(modelItem => item.Multimedia.Where(m => m.MultimediaOrden == 1).FirstOrDefault().MultimediaUrl)" height="70" width="70" alt="Imágen no encontrada" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ContenidoId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ContenidoId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ContenidoId })
        </td>
    </tr>
}

</table>
