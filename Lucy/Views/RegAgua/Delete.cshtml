@model ModelCL.Registro

@{
    ViewBag.Title = "Agua | Eliminar";
}

<h2>Eliminar registro</h2>

<h3>¿Esta seguro de que desea eliminar este registro de peso?</h3>
<div>
    <h4>Peso</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Persona")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Persona.nombreCompleto)
        </dd>

        <dt>
            @Html.Label("Fecha")
        </dt>

        <dd>
            @Model.RegistroFchHora.ToString("dd MMM yyyy")
        </dd>

        <dt>
            @Html.Label("Cantidad (litros)")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Agua.AguaCantidad)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
