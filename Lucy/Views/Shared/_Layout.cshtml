                    <span data-slick-index="3" class="progressBar"></span>
                </div>*@
            </div>
        </div>
    }

    @RenderSection("subnav", required: false)

    <!-- body -->
    <div class="container body-content">
        
        @RenderBody()
        
    </div>

    <div class="container body-content">
        <!-- footer -->
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Lucy</p>
        </footer>
    </div>

    <!-- Modal Notificaciones -->
    <div class="modal fade" id="PopUpNotificaciones" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Notificaciones</h4>
                </div>
                <div id="listaNot" class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-link" data-dismiss="modal">Volver</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        function abrirNotificaciones() {
            $('#PopUpNotificaciones').modal({
                show: 'true'
            });
        }
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/myScript")

