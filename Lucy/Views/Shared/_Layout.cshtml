                            <li class="userLi"><a href="/registros/comida/listado"><img src="~/resources/Oficial/comida.png" /><p>Comida</p></a></li>
                            <li class="userLi"><a href="/registros/agua/listado"><img src="~/resources/Oficial/agua.png" /><p>Agua</p></a></li>
                            <li class="userLi"><a href="/registros/actividad/listado"><img src="~/resources/Oficial/actividad.png" /><p>Actividad</p></a></li>
                            <li class="userLi"><a href="/registros/medicacion/listado"><img src="~/resources/Oficial/medicina.png" /><p>Medicina</p></a></li>
                            <li class="userLi"><a href="/registros/peso/listado"><img src="~/resources/Oficial/peso.png" /><p>Peso</p></a></li>
                            <li class="userLi"><a href="/registros/control/listado"><img src="~/resources/Oficial/control.png" /><p>Control</p></a></li>
                            <li class="userLi"><a href="/registros/control_diabetico/listado"><img src="~/resources/Oficial/diabetes.png" /><p>Control Diabético</p></a></li>
                        </ul>

                    </li>

                    

                    <li class="topnavli"><a href="/articulos/listado">Noticias</a></li>

                    
                    
                    @*Alimentos*@
                    <li class="topnavli dropdown1 arrow">

                        <a href="#" class="dropdown-toggle" data-toggle="dropdownS">Alimentación</a>
                        <ul class="dropdown-menuS nav-list list-inline">
                            <li class="userLi"><a href="/recetas/listado"><img src="~/resources/Oficial/receta.png" /><p>Recetas</p></a></li>
                            <li class="userLi"><a href="/alimentos/listado"><img src="~/resources/Oficial/infnut.png" /><p>Inf. Nutricional</p></a></li>
                            <li class="userLi"><a href="/dietas/listado"><img src="~/resources/Oficial/dieta.png" /><p>Dieta</p></a></li>
                        </ul>

                    </li>

                    <li class="topnavli"><a href="/" class="logoBanner"></a></li>

                    @*Ejercicio*@
                    <li class="topnavli dropdown2 arrow">
                        
                        <a href="#" class="dropdown-toggle" data-toggle="dropdownS">Ejercicio</a>
                        <ul class="dropdown-menuS nav-list list-inline">
                            <li class="userLi"><a href="/programas/listado"><img src="~/resources/Oficial/programa.png" /><p>Programas</p></a></li>
                            <li class="userLi"><a href="/rutinas/listado"><img src="~/resources/Oficial/rutina.png" /><p>Rutinas</p></a></li>
                            <li class="userLi"><a href="/ejercicios/listado"><img src="~/resources/Oficial/ejercicio.png" /><p>Ejercicios</p></a></li>
                        </ul>
                    </li>

                    <li class="topnavli"><a href="/mapa">Mapa</a></li>

                    @*Calculadoras*@
                    <li class="topnavli dropdown2 arrow">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdownS">Calculadoras</a>
                        <ul class="dropdown-menuS nav-list list-inline">
                            <li class="userLi"><a href="/calculadoras/IMC"><img src="~/resources/Oficial/imc.png" title="Índice de Masa Corporal" /><p>IMC</p></a></li>
                            <li class="userLi"><a href="/calculadoras/TMB"><img src="~/resources/Oficial/tmb.png" title="Tasa Metabólica Basal" /><p>TMB</p></a></li>
                        </ul>
                    </li>


                    @*UsuIco*@
                    <li class="topnavli arrow" id="liUsu">

                        <a href="#" class="user dropdown-toggle" data-toggle="dropdown"></a>
                        <ul id="ulUsu" class="dropdown-menu">
                            <li class="userLi" style="border:none;">
                                @if ((Request.Cookies[FormsAuthentication.FormsCookieName] != null) && (Request.Cookies["cookieUsu"] != null))
                                {
                                    <h3 class="userTitle">@Request.Cookies["cookieUsu"]["UsuNom"]</h3>
                                }
                                else
                                {
                                    <h3 class="userTitle">Bienvenido</h3>
                                }
                            </li>

                            @if (Request.Cookies[FormsAuthentication.FormsCookieName] != null)
                            {
                                <li class="dropdown-submenu userLiSubMenu" id="leti"></li>
                            }

                            <li class="userLi"><a id="btnNotificacion" href="#" onclick="abrirNotificaciones()">Notificaciones <span class="badge badge-pill badge-info"></span></a>
                                
                            </li>

                            <li class="userLi"><a href="#">Favoritos</a></li>

                            <li class="userLi">
                                @Html.ActionLink("Datos Clínicos", "Datos_Clinicos", "Personas")
                            </li>

                            <li class="userLi"><a href="/configuracion">Configuración</a></li>

                            <li class="userLi">
                                @if (Request.Cookies[FormsAuthentication.FormsCookieName] != null)
                                {
                                    @Html.ActionLink("Salir", "Logout", "Usuarios")
                                }
                                else
                                {
                                    @Html.ActionLink("Ingresar", "Login", "Usuarios")
                                }
                            </li>
                        </ul>

                    </li>
                </ul>
            </div>
        </nav>
    </header>

