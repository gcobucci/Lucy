            <ul class="ul-sidenav">
                @if ((Request.Cookies[FormsAuthentication.FormsCookieName] != null) && (Request.Cookies["cookieUsu"] != null))
                {
                    <li class="liHi">
                        <a disabled class="opSidnav typewrite" data-period="3000" data-type='[ "", "Hola @Request.Cookies["cookieUsu"]["UsuNom"]", "¿Cómo estás?", "¿Qué tal tu día?" ]'>
                            <span class="wrap"></span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="liHi">
                        <a disabled class="opSidnav typewrite" data-period="3000" data-type='[ "Hola, Soy Lucy", "¿Es tu primera vez aquí?", "Yo puedo cuidarte", "¿Por qué no te creas una cuenta?" ]'>
                            <span class="wrap"></span>
                        </a>
                    </li>
                }
                <li>
                    <a href="/articulos/listado" class="opSidnav">Noticias</a>
                </li>
                <li>
                    <a href="#subMenu-Registros" class="opSidnav" data-toggle="collapse">Registro</a>
                    <div id="subMenu-Registros" class="panel-collapse collapse">
                        <ul class="subMenu-ul">
                            <li><a href="/registros/comida/listado">Comida</a></li>
                            <li><a href="/registros/agua/listado">Agua</a></li>
                            <li><a href="/registros/actividad/listado">Actividad</a></li>
                            <li><a href="/registros/medicacion/listado">Medicina</a></li>
                            <li><a href="/registros/peso/listado">Peso</a></li>
                            <li><a href="/registros/control/listado">Control</a></li>
                            <li><a href="/registros/control_diabetico/listado">Control Diabético</a></li>
                        </ul>
                    </div>
                </li>
                <li>
                    <a href="/alimentos/listado" class="opSidnav">Información Nutricional</a>
                </li>
                <li>
                    <a href="/dietas/listado" class="opSidnav">Dietas</a>
                </li>
                <li>
                    <a href="/recetas/listado" class="opSidnav">Recetas</a>
                </li>
                <li>
                    <a href="/mapa" class="opSidnav">Mapa</a>
                </li>
                <li>
                    <a href="#subMenu-Ejercicios" class="opSidnav" data-toggle="collapse">Ejercicio</a>
                    <div id="subMenu-Ejercicios" class="panel-collapse collapse">
                        <ul class="subMenu-ul">
                            <li><a href="/programas/listado">Programas</a></li>
                            <li><a href="/rutinas/listado">Rutinas</a></li>
                            <li><a href="/ejercicios/listado">Ejercicios</a></li>
                        </ul>
                    </div>
                </li>
                <li>
                    <a href="#subMenu-Calculadoras" class="opSidnav" data-toggle="collapse">Calculadoras</a>
                    <div id="subMenu-Calculadoras" class="panel-collapse collapse">
                        <ul class="subMenu-ul">
                            <li><a href="/calculadoras/imc">IMC</a></li>
                            <li><a href="/calculadoras/tmb">TMB</a></li>
                        </ul>
                    </div>
                </li>
                <li>
                    <a href="#" class="opSidnav">Calendario</a>
                </li>
                <li>
                    <a href="/historial_clinico" class="opSidnav">Historial Clínico</a>
                </li>
                <li style="border: 0;">
                    <div class="socialButton">
                        <ul>
                            <li><a href="#" class="fa fa-facebook"></a></li>
                            <li><a href="#" class="fa fa-twitter"></a></li>
                            <li><a href="#" class="fa fa-google"></a></li>
                        </ul>
                    </div>
                </li>
            </ul>
        </nav>

        <!-- topnav -->
